@if (ViewBag.message != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>@ViewBag.message</strong>
    </div>
}

@{
    ViewBag.Title = "Lista de categorii";
}

<br />
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/Bookmarks/Index">Bookmarks</a></li>
    <li class="breadcrumb-item active">Categorii</li>
</ol>

<div class="jumbotron bg-light">
    <h2 class="display-4">@ViewBag.Title</h2>
    <p class="lead">Mai jos este afisata lista de categorii. Aceasta poate fi editata numai de catre administrator. </p>
    <hr class="my-4">

    <table class="table table-hover">
        <thead>
            <tr class="table-info">
                <th scope="col">Denumire categorie</th>
                <th scope="col">Vizualizare</th>
                <th scope="col">Editare</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in ViewBag.Categories)
            {
                <tr class="table-secondary">
                    <th scope="row">@category.CategoryName</th>
                    <td><a href="/Categories/Show/@category.CategoryId">Afisare categorie</a></td>
                    <td><a href="/Categories/Edit/@category.CategoryId">Editare categorie</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal-footer">
        <a class="btn btn-primary btn-lg" href="/Categories/New" role="button">Adauga o noua categorie</a>
    </div>

</div>


