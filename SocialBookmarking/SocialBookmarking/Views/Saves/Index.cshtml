@{
    ViewBag.Title = "Index";
}

<br />
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/Bookmarks/Index">Bookmarks</a></li>
    <li class="breadcrumb-item active">My profile</li>
</ol>

<div class="jumbotron bg-light">
    <h2 class="display-4">Profilul meu</h2>
    <p class="lead">Bookmark-urile salvate de mine: </p>
    <hr class="my-4">
    @foreach (var save in ViewBag.Saves)
    {
        <div class="card bg-secondary mb-3" style="max-width: 65rem;">
            <h3 class="card-header">@save.Bookmark.BookmarkTitle</h3>
            <div class="card-body">
                <i>salvat la data de</i>
                <span class="label label-success">@save.Bookmark.BookmarkDate</span>
                <hr />
                <span class="badge badge-pill badge-info">@save.Bookmark.BookmarkTags</span>
                <p class="card-text">Continut bookmark: <strong>@save.Bookmark.BookmarkDesc</strong></p>
                <hr />
                <span class="label label-success">@save.Bookmark.BookmarkPopularity voturi</span>
                <div class="modal-footer">
                    <a class="btn btn-info" href="/Bookmarks/Show/@save.BookmarkID">
                        Afisare bookmark
                    </a>
                </div>
            </div>
        </div>
    }
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    <a href="/Saves/Index?page=1" aria-label="Previous" class="page-link">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    <li class="page-item"><a class="page-link" href="/Saves/Index?page=@i">@(i)</a></li>
                }
                <li class="page-item">
                    <a class="page-link" href="/Saves/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>