@model SocialBookmarking.Models.Bookmark

<br />
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/Bookmarks/Index">Bookmarks</a></li>
    <li class="breadcrumb-item active">Adaugare Bookmark</li>
</ol>

<div class="jumbotron bg-light">
    <h1 class="display-4">Adauga un bookmark</h1>
    <p class="lead">Completati spatiile de mai jos pentru a adauga un bookmark.</p>
    <hr class="my-4">

    @using (Html.BeginForm(actionName: "New", controllerName: "Bookmarks"))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        @Html.Label("BookmarkTitle", "Titlu Bookmark")
        <br />
        @Html.TextBox("BookmarkTitle", null, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.BookmarkTitle, null, new { @class = "text-danger" })

        <br /><br />

        @Html.Label("BookmarkDesc", "Descriere Bookmark")
        <br />
        @Html.TextArea("BookmarkDesc", null, new { @class = "form-control" })
        @Html.ValidationMessage("BookmarkDesc", null, new { @class = "text-danger" })
        <br /><br />

        <label>Selectati categoria</label>
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
        "Selectati categoria", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
        <br />
        <br />

        <label>Tags</label>
        @Html.TextArea("BookmarkTags", null, new { @class = "form-control" })

        <div class="modal-footer">
            <button class="btn btn-primary" type="submit">Adauga bookmark</button>
        </div>
    }
</div>